{% if section.settings.sizeChartImg %}
<div class="size-chart-btn">
  <a class="size-chart-link" onclick="showPopUp()">Size Guide</a>
</div>

<div id="sizeChartPopUp" class="size-chart-popup">
  <div class="size-chart-popup-wrapper">
    <div class="pop-up-header">
      <span class="closePopUp" onclick="closePopUp()">X</span>
    </div>
    <div class="popup-content" style="background: url({{ section.settings.sizeChartImg | img_url:'master' }});" onclick="zoom()">
      <img class="size-chart-image" src="{{ section.settings.sizeChartImg | img_url:'master' }}"/>
    </div>
  </div>
</div>

<script>
  function showPopUp() {
   document.getElementById('sizeChartPopUp').classList.add("showPopUp");
};
  function closePopUp() {
   document.getElementById('sizeChartPopUp').classList.remove("showPopUp");
};
  function zoom() {
   document.querySelector('.popup-content').classList.toggle("zoom");
};
</script>

<style>
  .size-chart-btn {
    display: block;
    margin: 5px 0;
    text-align: center;
    padding: 0;
}
  .size-chart-btn .size-chart-link {
    padding: 0;
    margin: 0;
    line-height: 1;
    display: inline-block;
    color: #7d8c9c;
    text-transform: uppercase;
    text-decoration: underline;
    font-size: 16px;
    cursor: pointer;
}
  .size-chart-popup {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 999;
    padding: 20px;
    background: #000000a6;
    transition: .3s;
}
  .size-chart-popup.showPopUp {
    display: block;
}
  .size-chart-popup-wrapper {
    height: 100%;
    display: block;
}
  .pop-up-header {
    display: block;
    padding: 10px;
    text-align: right;
    padding-right: 0;
}
  .closePopUp {
    display: inline-block;
    color: #fff;
    font-size: 20px;
    line-height: 1;
    cursor: pointer;
    font-weight: bold;
    border: 1px solid;
    padding: 5px;
    border-radius: 2px;
    transition: .2s;
}
  .closePopUp:hover {
    color: red;
    transition: .2s;
}
  .popup-content {
    width: 100%;
    height: 85%;
    background-repeat: no-repeat !important;
    background-size: contain !important;
    background-position: center !important;
}
  .popup-content img.size-chart-image {
    display: none !important;
    width: auto;
    height: 100%;
}
  
@media screen and (min-width: 741px){
  .popup-content {
    cursor: zoom-in;
}
  .popup-content.zoom {
    overflow: hidden;
    overflow-y: scroll;
}
  .popup-content.zoom {
    background: none !important;
    cursor: zoom-out;
}
  .popup-content.zoom img.size-chart-image {
    display: block !important;
    width: 100%;
    height: auto;
}
}
</style>
{% endif %}
